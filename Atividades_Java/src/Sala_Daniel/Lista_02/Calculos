package Sala_Daniel.Lista_02;
import java.util.Scanner;

public class Calculos {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
    
        System.out.println("Escolha o primeiro número:");
        int n1 = sc.nextInt();

        System.out.println("Escolha o segundo número:");
        int n2 = sc.nextInt();

        int soma = n1 + n2;
        int subt = n1 - n2;
        int mult = n1 * n2;

        System.out.println("A soma entre os 2 números é igual a: " + soma);
        System.out.println("A subtração entre os 2 números é igual a " + subt);
        System.out.println("A multiplicação entre os 2 números é igual a " + mult);

        sc.close();
    }
}